{
	"compilerOptions": {
		"module": "Node18",
		"target": "es2023",
		"strict": true,
		"noImplicitAny": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"preserveConstEnums": true,
		"sourceMap": true,
		"declaration": true,
		"skipLibCheck": true,
		"outDir": "out"
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules"]
}
